.modal-form
  width 100%

  &__phone
    width 86%
    padding 10px 10px
    margin 10px 0
    outline none
    border-radius: 2px
    border none
    &--features
      max-width 280px
      width 100%
      display block
      margin 20px auto 10px auto
      @media (max-width: 410px)
        width 84%

  &__desc
    color #fff
    margin 10px auto 0 auto
    width 90%

  &__link
    color #ffc200
    &:hover
      text-decoration none