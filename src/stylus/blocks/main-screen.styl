.main-screen
  background url(../images/main-bg.jpg) no-repeat fixed
  width 100%
  background-size cover
  min-height 100vh
  position relative
  @media (max-width: 555px)
    min-height 540px

  &__inner
    height 100vh
    width 100%
    display flex
    justify-content center
    flex-direction column
    position absolute
    @media (max-width: 555px)
      display block
      top 100px

  &__wrapper
    background rgba(0,0,0,0.4)
    padding 30px 0 0 0
    max-width 95%
    margin: 50px auto 0 auto
    text-shadow: 2px 4px 3px rgba(0, 0, 0, 0.64);
    @media screen and (max-height: 700px) and (min-height: 588px)
      margin 140px auto -30px auto

    @media (max-width: 555px)
      margin-top 50px
      padding-bottom 10px

  &__title
    font-family: 'Roboto', sans-serif
    text-align center
    font-size 60px
    color: rgba(255,194,0,1);
    text-transform uppercase
    font-weight 400
    letter-spacing -0.01em
    line-height 1.2em
    @media screen and (max-height: 769px) and (min-height: 588px)
      font-size 50px

    @media (max-width: 890px)
      font-size 32px

  &__text-content
    font-family: 'Roboto', sans-serif
    font-weight 400
    text-align center
    font-size 38px
    max-width 70%
    margin 30px auto 50px auto
    @media screen and (max-height: 769px) and (min-height: 588px)
      font-size 30px

    @media (max-width: 890px)
      font-size 20px
      margin 5px auto 5px auto