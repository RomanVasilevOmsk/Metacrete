.modal
  max-width 300px
  width 100%
  padding 20px
  background #fff
  text-align center
  position fixed
  top 0
  bottom 0
  height 100%
  max-height 300px
  left 0
  right 0
  margin auto
  z-index 1000
  color #fff
  border 4px solid rgba(255,194,0,0.9)
  background rgba(0,0,0,0.8)
  border-radius 3px
  display none
  @media (max-width: 415px) {
    max-height 335px
    max-width 240px
  }
  &__title
    color rgba(255,194,0,1)
    &:after
      content ""
      background url(../images/yellow-line.png) no-repeat
      display inline-block
      width 100%
      height 8px
      background-size contain

  &__desc
    font-size 20px
    font-weight 400

  &__close
    position absolute
    right 0
    top 6px
    width 32px
    height 32px
    opacity 0.4
    &:hover
      opacity 1
    &:before, &:after
      position absolute
      left 15px
      content ' '
      height 20px
      width 2px
      background-color #ffc200

    &:before
      transform rotate(45deg)

    &:after
      transform rotate(-45deg)

